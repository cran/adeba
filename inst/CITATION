citHeader("To cite package ‘adeba’ in publications use:")

year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
vers <- paste("R package version", meta$Version)

citEntry(entry = "Manual",
         title = "Adaptive density estimation by Bayesian Averaging",
         author = personList(as.person("Christofer L Bäcklin"),
                             as.person("Mats G Gustafsson")),
         year = year,
         note = vers,

         textVersion =
         paste0("Christofer L Bäcklin, Mats G Gustafsson (",
                year,
                "). Adaptive density estimation by Bayesian Averaging. ",
                vers, "."))

